!!! 5
%html
  %head
    %title #{book.title}
    %meta{:charset => "utf-8"}
    %meta{:"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}

    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

    %link{:href=>'http://fonts.googleapis.com/css?family=Lusitana|Inconsolata|Oxygen', :rel=>'stylesheet', :type=>'text/css'}

    - style.stylesheets.each do |s|
      - if s.style_supplied?
        %link{:rel=>'stylesheet', :type=>'text/css', :href=>s.path_from("style")}
      - else
        %link{:rel=>'stylesheet', :type=>'text/css', :href=>s.path_from("")}
  %body
    = yield

    - style.scripts.each do |s|
      %script{:type=>"text/javascript", :src=>s.path_from("style")}
